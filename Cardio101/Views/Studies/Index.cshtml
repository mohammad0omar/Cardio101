@model IEnumerable<Cardio101.Models.Study>

@{
    ViewData["Title"] = "Studies";
}

<h1>Studies</h1>


 <script src="~/js/study.js" asp-append-version="true"></script>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="studies_table table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Device)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.NormalHeartRate)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.LowHeartRate)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.HighHeartRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="@item.Id" class="sdsds" @*data-url="User/CreateEdit" data-toggle="modal" data-target="#modal-details-study"*@>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.SerialNumber)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.NormalHeartRate)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.LowHeartRate)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.HighHeartRate)
            </td>*@
             <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_modal" />  
@section Scripts{  
    <script src="~/js/study.js" asp-append-version="true"></script>  
} 